# === ОСНОВНЫЕ НАСТРОЙКИ ПРИЛОЖЕНИЯ ===
APP_NAME=База Лобаново
APP_VERSION=1.0.0
SECRET_KEY= # ОБЯЗАТЕЛЬНО: сгенерируйте уникальный ключ (см. ниже)


# === НАСТРОЙКИ СЕРВЕРА ===
HOST=0.0.0.0          # 0.0.0.0 — слушать все интерфейсы
PORT=5000             # порт веб‑сервера
FLASK_DEBUG=False     # False для продакшена, True для разработки

# Время ожидания клиента (сек)
WEBSOCKET_TIMEOUT=60


# === БАЗА ДАННЫХ ===
DATABASE_URL=sqlite:///lobanovo.db  # SQLite по умолчанию
# Для PostgreSQL (пример):
# DATABASE_URL=postgresql://user:password@localhost/lobanovo


# === БЕЗОПАСНОСТЬ ===
SESSION_COOKIE_SECURE=True        # HTTPS только (если есть SSL)
SESSION_COOKIE_HTTPONLY=True      # защита от XSS
SESSION_COOKIE_SAMESITE=Lax       # защита от CSRF
RESET_TOKEN_EXPIRY=15             # минут до истечения токена сброса пароля
LOGIN_ATTEMPTS_LIMIT=5          # макс. попыток входа
LOGIN_LOCKOUT_TIME=300          # сек. блокировки после превышения лимита


# === ЗАГРУЗКА ФАЙЛОВ ===
MAX_CONTENT_LENGTH=10485760    # 10 МБ (в байтах)
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,csv,xlsx,xls,doc,docx,zip
UPLOAD_FOLDER=uploads/              # папка для загруженных файлов

# === ЛОГИРОВАНИЕ ===
LOG_LEVEL=INFO                   # DEBUG, INFO, WARNING, ERROR
LOG_FILE=app.log               # файл логов


# === ПОЧТА (опционально) ===
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=no-reply@lobanovo.ru
MAIL_PASSWORD= # укажите пароль
MAIL_DEFAULT_SENDER="База Лобаново" <no-reply@lobanovo.ru>


# === ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ===
# Время жизни кэша (сек)
CACHE_TIMEOUT=300
# Язык интерфейса
LANGUAGE=ru
# Часовой пояс
TIMEZONE=Europe/Moscow
